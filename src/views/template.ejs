<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PDF Document</title>
  <style>
    /* Define CSS styles for formatting */
    .container {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    .field {
      margin-bottom: 10px;
    }
    .field-name {
      font-weight: bold;
    }
    .attachment-table {
      width: 100%;
      border-collapse: collapse;
    }
    .attachment-table th,
    .attachment-table td {
      border: 1px solid #dddddd;
      padding: 8px;
      text-align: left;
    }
    .attachment-table th {
      background-color: #f2f2f2;
    }
    /* Define margin for the second page */
    @page {
      margin: 20px;
    }
  </style>
</head>
<body>
  <!-- Wrapper div for content -->
  <div class="container">
    <!-- Iterate over each field in the data -->
    <div>

    </div>


    <div class="field">
          <div class="field-name">Attachment:</div>
          <table class="attachment-table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Nama</th>
                <th>Ready</th>
                <th>Deskripsi</th>
              </tr>
            </thead>
            <tbody>
              <!-- Iterate over each attachment and display as a table row -->
              <% data.attachments.forEach(attachment => { %>
                <tr>
                  <td><%= attachment.id %></td>
                  <td><%= attachment.nama %></td>
                  <td><%= attachment.ready %></td>
                  <td><%= attachment.deskripsi %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
    </div>
  </div>
</body>
</html>